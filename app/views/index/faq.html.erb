%>

<div class="content-wrapper">

  <div class="width-wrapper-sm">
    <h1 class="instruction">FAQ</h1>

    <dl>
      <% app_instructions_offset = 0 %>
      <% faqs.each_with_index do |faq, i| %>

        <div class="row">
          <dt id="faq-<%= i %>" class="col-sm-5">
            <%= faq[:question] %>
          </dt>
          <% if faq[:answer] == '###app-instructions###' %>
            <dd id="app-instructions-wrapper" class="app-instruction-wrapper col-sm-7"><%= render('shared/app_instructions') %></dd>
          <% else %>
            <dd class="col-sm-7"><%= faq[:answer] %></dd>
          <% end %>          
        </div>

      <% end %>
    </dl>

    <hr />

    <p class="faq-cta-wrapper">
      Nicht gefunden, wonach du suchst?<br />
      <%= link_to 'Kontakt aufnehmen', contact_path, :class => 'btn btn-success btn-lg' %>
    </p>

  </div> <%# /.width-wrapper-sm %>
</div> <%# /.content-wrapper %>